//Count Substrings
#include <iostream>
using namespace std;

int main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
	int t;
	cin>>t;
	while(t--)
	{
	    long long p=0;
	    int n;
	    cin>>n;
	    string s;
	    cin>>s;
	    for(int i=0;i<n;i++)
	    {
	        if(s[i]=='1')
	        {
	            p=p+1;
	        }
	    }
	    cout<<(p*(p+1))/2<<endl;
	}
	return 0;
}
